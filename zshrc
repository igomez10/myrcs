export PATH=$PATH:~/.local/bin
export PATH=$PATH:$HOME/.cargo/bin
export PATH=$PATH:$HOME/go/bin
export PATH=$PATH:/opt/homebrew/opt/llvm/bin

source ~/.zsh/zsh-autosuggestions/zsh-autosuggestions.zsh
